    //    faces
    //    (
    //        (1 5 6 2)
    //    );
    //}

    inout
    {
        type patch;
        faces
        (
            (0 3 7 4)
            (1 5 6 2)
        );
    }

    roof
    {
        type wall;
        faces
        (
            (4 7 6 5)
        );
    }
    floor
    {
        type wall;
        faces
        (
            (0 1 2 3)
        );
    }
    sides
    {
        type symmetry;
        faces
        (
            (0 4 5 1)
            (3 2 6 7)
        );
    }

);

